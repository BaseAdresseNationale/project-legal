{
  "name": "@etalab/project-legal",
  "version": "0.5.0",
  "description": "Projection de coordonnées WGS-84 vers le système légal français en vigueur",
  "main": "./index.js",
  "repository": "https://github.com/BaseAdresseNationale/project-legal",
  "author": "Jérôme Desboeufs <jerome.desboeufs@data.gouv.fr>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "browser",
    "index.js",
    "browser.js",
    "projections.json"
  ],
  "scripts": {
    "lint": "xo",
    "test": "ava",
    "transpile": "babel lib --out-dir browser",
    "prepublishOnly": "yarn transpile"
  },
  "dependencies": {
    "proj4": "^2.8.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.10",
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "ava": "^4.2.0",
    "xo": "^0.49.0"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "unicorn/no-zero-fractions": "off",
      "unicorn/prefer-module": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "import/extensions": "off"
    }
  },
  "engines": {
    "node": ">= 12"
  },
  "browser": {
    "./index.js": "./browser.js"
  },
  "browserslist": "> 0.5% in FR, last 2 versions, Firefox ESR, not ie 11, not dead",
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}

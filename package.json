{
  "name": "@etalab/project-legal",
  "version": "0.5.0",
  "description": "Projection de coordonnées WGS-84 vers le système légal français en vigueur",
  "main": "./index.js",
  "repository": "https://github.com/BaseAdresseNationale/project-legal",
  "author": "Jérôme Desboeufs <jerome.desboeufs@data.gouv.fr>",
  "license": "MIT",
  "private": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib",
    "browser",
    "index.js",
    "browser.js",
    "projections.json"
  ],
  "scripts": {
    "lint": "xo",
    "test": "ava",
    "transpile": "babel lib --out-dir browser",
    "prepublishOnly": "yarn transpile"
  },
  "dependencies": {
    "proj4": "^2.6.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.0",
    "@babel/core": "^7.17.2",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "ava": "^4.0.1",
    "xo": "^0.48.0"
  },
  "xo": {
    "semicolon": false,
    "space": 2,
    "rules": {
      "unicorn/no-zero-fractions": "off",
      "unicorn/prefer-module": "off",
      "comma-dangle": [
        "error",
        "never"
      ],
      "import/extensions": "off"
    }
  },
  "engines": {
    "node": ">= 12"
  },
  "browser": {
    "./index.js": "./browser.js"
  },
  "browserslist": [
    "> 1% in FR",
    "last 2 versions",
    "Firefox ESR"
  ],
  "babel": {
    "presets": [
      "@babel/preset-env"
    ],
    "plugins": [
      [
        "@babel/plugin-transform-runtime",
        {
          "corejs": 2,
          "helpers": true
        }
      ]
    ]
  }
}
